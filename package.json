{
  "name": "@scaffoldly/rowdy-grpc",
  "description": "gRPC Bindings for Rowdy",
  "version": "0.0.2-1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scaffoldly/rowdy.git"
  },
  "bugs": {
    "url": "https://github.com/scaffoldly/rowdy/issues"
  },
  "author": "Scaffoldly <github.com/scaffoldly>",
  "license": "SEE LICENSE IN LICENSE.md",
  "private": false,
  "engines": {
    "node": ">=22",
    "yarn": ">=1.22.0",
    "npm": ">=10"
  },
  "engineStrict": false,
  "scripts": {
    "build": "yarn build:index",
    "rebuild": "yarn build:git && yarn build:buf && yarn build:index",
    "build:git": "git submodule update --init cri-api",
    "build:buf": "buf generate",
    "build:index": "tsup",
    "test": "yarn jest -- --verbose --testTimeout=30000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
          "**/tests/**/*.test.ts"
        ],
        "transform": {
          "^.+\\.ts$": [
            "ts-jest",
            {
              "tsconfig": "tests/tsconfig.json"
            }
          ],
          "^.+\\.html$": "<rootDir>/tests/transformers.js"
        },
        "moduleNameMapper": {
          "^@scaffoldly/rowdy-grpc$": "<rootDir>/src/index.ts"
        }
      }
    ]
  },
  "peerDependencies": {
    "@connectrpc/connect": "^2.1.0"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.59.0",
    "@bufbuild/protobuf": "^2.10.0",
    "@bufbuild/protoc-gen-es": "^2.10.0",
    "@connectrpc/connect": "^2.1.0",
    "@connectrpc/connect-node": "^2.1.0",
    "@connectrpc/connect-web": "^2.1.0",
    "@eslint/js": "^9.28.0",
    "@types/jest": "^30.0.0",
    "@types/negotiator": "^0.6.4",
    "@types/node": ">=22.0.0 <25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "jest": "^30.1.3",
    "linkedom": "^0.18.12",
    "negotiator": "^1.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "openapi-types": "^12.1.3"
  }
}
